{
  "Jwt": {
    "Secret": "secret_key_for_development_purpose_only",
    "Issuer": "https://localhost:7019",
    "Audience": "PlanIT.API",
    "ExpiryInMinutes": 120,
    "KeySizeInBits": 256 // størrelse på nøkkel
  },

  "SmtpSettings": {
    "SmtpHost": "smtp-mail.outlook.com",
    "SmtpPort": 587,
    "SmtpUsername": "planit-event@outlook.com",
    "SmtpPassword": "yVh1to*VzM2c"
  },



  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=planit_db;User ID=planit-user;Password=5ecret-plan1t;"
  },

  // konfigurasjon til tjenester i DI
  "DependencyInjection": {
    "Namespaces": [
      "PlanIT.API.Mappers",
      "PlanIT.API.Repositories",
      "PlanIT.API.Services",
      "PlanIT.API.Utilities"
    ],
    "Exclusions": [
      "BackgroundWorkerService"
    ]
  },


  // konfigurerer Serilog objekt:
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MySQL" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }, // Array
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.log",
          "rollingInterval": "Day", // logger til ny fil per dag
          "rollOnFileSizeLimit": "True",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "ConnectionString": "Server=localhost;Port=3306;Database=planit_db;User ID=planit-user;Password=5ecret-plan1t;",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithTreadId" ]
  },

  "AllowedHosts": "*"
}