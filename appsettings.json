{
  "Jwt": {
    "Issuer": "https://localhost:7019",
    "Audience": "PlanIT.API",
    "ExpiryInMinutes": 120,
    "KeySizeInBits": 256 // Size of the key in bits
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=planit_db;User ID=planit-user;Password=5ecret-plan1t;"
    // MySQL connection string including server, port, database name, user ID, and password
  },

  // Configuration for dependency injection services
  "DependencyInjection": {
    "Namespaces": [
      "PlanIT.API.Mappers",
      "PlanIT.API.Repositories",
      "PlanIT.API.Services"
    ],
    "Exclusions": [
      "BackgroundWorkerService",
      "JWTEmailAuth"
      // Services to be excluded from automatic dependency injection
    ]
  },

  // Configuration for Serilog logging framework
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MySQL" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }, // Array
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.log",
          "rollingInterval": "Day", 
          "rollOnFileSizeLimit": "True",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "ConnectionString": "Server=localhost;Port=3306;Database=planit_db;User ID=planit-user;Password=5ecret-plan1t;",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithTreadId" ]
  },

  "AllowedHosts": "*"
}